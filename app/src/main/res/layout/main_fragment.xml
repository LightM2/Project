<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

  <data>
    <variable name="viewModel" type="com.example.project.MainViewModel"/>
  </data>

  <LinearLayout android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
        android:id="@+id/appbar"
        android:layout_height="wrap_content">

      <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
          android:theme="@style/ToolBarTheme"
          android:layout_height="?attr/actionBarSize"
          android:id="@+id/main_toolbar"
          app:title="@string/toolBarTitle"
          app:navigationIcon="@drawable/ic_arrow_back_green_24dp">

      </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView android:layout_width="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:layout_height="match_parent">
      <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
          android:layout_gravity="center"
          android:maxWidth="500dp"
          android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_guideline"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_guideline"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_guideline"
            app:layout_constraintGuide_end="6dp"
            android:orientation="horizontal"/>

        <LinearLayout android:layout_width="0dp"
            android:id="@+id/documentLayout"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/top_guideline"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            android:layout_height="wrap_content">

          <ImageView android:layout_width="wrap_content"
              android:id="@+id/documentCheckCircle"
              android:src="@drawable/ic_check_circle_default"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
              android:hint="@string/document"
              android:id="@+id/documentText"
              style="@style/TextInputLayoutStyle"
              android:paddingLeft="34dp"
              android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:inputType="textCapWords"/>
          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:id="@+id/placeLayout"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/documentLayout"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            android:layout_height="wrap_content">

          <ImageView android:layout_width="wrap_content"
              android:id="@+id/placeCheckCircle"
              android:src="@drawable/ic_check_circle_default"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
              android:hint="@string/placeDocument"
              android:id="@+id/placeText"
              style="@style/TextInputLayoutStyle"
              android:paddingLeft="34dp"
              android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditText"
                android:inputType="textCapWords"/>
          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:id="@+id/seriesLayout"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/placeLayout"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            android:layout_height="wrap_content">

          <ImageView android:layout_width="wrap_content"
              android:id="@+id/seriesCheckCircle"
              android:src="@drawable/ic_check_circle_default"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
              android:hint="@string/series"
              android:id="@+id/seriesText"
              style="@style/TextInputLayoutStyle"
              app:counterEnabled="true"
              app:counterMaxLength="4"
              android:paddingLeft="34dp"
              android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/EditText"
                android:maxLength="4"
                android:inputType="number"/>
          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:id="@+id/numberLayout"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/seriesLayout"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            android:layout_height="wrap_content">

          <ImageView android:layout_width="wrap_content"
              android:id="@+id/numberCheckCircle"
              android:src="@drawable/ic_check_circle_default"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
              android:hint="@string/number"
              android:id="@+id/numberText"
              style="@style/TextInputLayoutStyle"
              android:paddingLeft="34dp"
              android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/EditText"
                android:maxLength="6"
                android:inputType="number"/>
          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:id="@+id/dateLayout"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            app:layout_constraintTop_toBottomOf="@+id/numberLayout"
            android:layout_height="wrap_content">

          <ImageView android:layout_width="wrap_content"
              android:id="@+id/dataCheckCircle"
              android:src="@drawable/ic_check_circle_default"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
              android:hint="@string/date"
              android:id="@+id/dateText"
              style="@style/TextInputLayoutStyle"
              android:paddingLeft="34dp"
              android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                style="@style/EditText"
                android:inputType="date"/>
          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
            android:id="@+id/codeLayout"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/dateLayout"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            android:layout_height="wrap_content">

          <ImageView android:layout_width="wrap_content"
              android:id="@+id/checkCircle"
              android:src="@drawable/ic_check_circle_default"
              android:layout_gravity="center_vertical"
              android:layout_height="wrap_content"/>

          <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
              android:hint="@string/code"
              android:id="@+id/codeText"
              style="@style/TextInputLayoutStyle"
              android:paddingLeft="34dp"
              android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/EditText"
                android:maxLength="7"
                android:inputType="number|phone"/>
          </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton android:layout_width="0dp"
            android:id="@+id/nextButton"
            android:text="@string/nextButtonString"
            style="@style/NextButtonTheme"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/codeLayout"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            app:layout_constraintBottom_toTopOf="@+id/cancelButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1"/>

        <com.google.android.material.button.MaterialButton android:layout_width="0dp"
            android:id="@+id/cancelButton"
            android:text="@string/cancel"
            style="@style/CancelButtonTheme"
            app:rippleColor="@color/defaultNextButtonColor"
            app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

  </LinearLayout>


</layout>